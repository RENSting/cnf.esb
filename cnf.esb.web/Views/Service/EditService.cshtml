@using cnf.esb.web.Models
@model EditServiceViewModel
@{
    ViewData["Title"]="修改";
}

<div class="page-header">
    <h1>修改服务基本信息</h1>
    <p class="text-muted small">
        这里仅修改服务的名称等信息，修改服务协定请使用“管理”链接。小心修改类型，改变类型会清空已经定义的协定。
    </p>
</div>
<div class="row">
    <div class="col-md-6" style="min-width:30rem;">
        <form asp-action="EditService" asp-antiforgery="true" method="post">
            @Html.HiddenFor(m=>m.ServiceID)
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="GroupName"></label>
                <input asp-for="GroupName" class="form-control" />
                <span asp-validation-for="GroupName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Type"></label>
                <select asp-for="Type" asp-items="@Html.GetEnumSelectList<ServiceType>()"
                    class="form-control"></select>
                <span asp-validation-for="Type" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FullDescription"></label>
                <textarea asp-for="FullDescription" class="form-control" rows="3"></textarea>
                <span asp-validation-for="FullDescription" class="text-danger"></span>
            </div>
            <div class="form-check">
                <input class="form-check-input" asp-for="ActiveStatus">
                <label class="form-check-label" asp-for="ActiveStatus">
                    是否启用
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="提交" class="btn btn-primary" />
            </div>
        </form>   
    </div>
</div>

<div>
    <a asp-action="Index">返回注册服务列表</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
